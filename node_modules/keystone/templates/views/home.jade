extends ../layout/base

block intro
	.page-header
		h1 Manage
		//p.lead Each item below represents a list in your database. See above for matching navigation.
block content
	if nav.flat
		each list in lists
			h3: a(href='/keystone/' + list.path, class=(section == list.key ? 'selected' : null))= list.label
	else
		each navSection in nav.sections
			.nav-section
				h4= navSection.label
				each list in navSection.lists
					h3: a(href='/keystone/' + list.path, class=(section == list.key ? 'selected' : null))= list.label
		if orphanedLists.length
			.nav-section
				h4 Other
				each list in orphanedLists
					h3: a(href='/keystone/' + list.path, class=(section == list.key ? 'selected' : null))= list.label
		
		